<AnchorPane prefHeight="200.0" prefWidth="300.0" styleClass="paneColor" stylesheets="@background.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.QuitPopUpController">
   <children>
      <StackPane layoutX="183.0" layoutY="110.0" prefHeight="200.0" prefWidth="300.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <GridPane>
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <StackPane prefHeight="150.0" prefWidth="200.0">
                     <children>
                        <Label text="Are you sure?" textFill="#9e0c0c">
                           <font>
                              <Font size="20.0" />
                           </font>
                        </Label>
                     </children>
                  </StackPane>
                  <StackPane GridPane.rowIndex="1">
                     <children>
                        <DialogPane styleClass="paneColor">
                           <content>
                              <Button id="quitNoButton" onAction="#quitNoButtonClicked" mnemonicParsing="false" text="No, do not quit game." />
                           </content>
                           <header>
                              <Button id="quitYesButton" onAction="#quitYesButtonClicked" mnemonicParsing="false" text="Yes, quit game." />
                           </header>
                        </DialogPane>
                     </children>
                  </StackPane>
               </children>
            </GridPane>
         </children></StackPane>
   </children>
